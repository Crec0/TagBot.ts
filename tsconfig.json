{
    "compilerOptions": {
        "allowJs": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "build",
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
    },
    "include": [
        "src/**/*.ts",
    ]
}

